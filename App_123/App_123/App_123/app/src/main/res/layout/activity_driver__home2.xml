<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".Driver_Home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#EC9FA8"
            android:orientation="vertical"

            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:background="@drawable/view_request"
                android:layout_height="150dp">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:textColor="#BB2D3E"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:text="الطلب 1 "
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:text=" القاهره,حي العاشر من رمضان.. "
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"

                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/location1"
                        android:layout_width="134dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="16dp"
                        android:textStyle="bold"
                        android:textColor="#EC9FA8"
                        android:layout_height="33dp"
                        android:text="مزيد من التغاصيل" />



                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:background="@drawable/view_request"
                android:layout_height="150dp">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:textColor="#BB2D3E"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:text="الطلب 2 "
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:text=" القاهره,حي العاشر من رمضان.. "
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/location2"
                        android:layout_width="134dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="24dp"
                        android:textColor="#EC9FA8"
                        android:layout_height="33dp"
                        android:text="مزيد من التغاصيل" />



                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/view_request"
                android:layout_height="150dp">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:textColor="#BB2D3E"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:text="الطلب 3"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:text=" القاهره,حي العاشر من رمضان.. "
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/location3"
                        android:layout_width="134dp"
                        android:textStyle="bold"
                        android:textColor="#EC9FA8"
                        android:layout_marginLeft="20dp"
                        android:layout_height="33dp"
                        android:text="مزيد من التغاصيل" />



                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:background="@drawable/view_request"
                android:layout_height="150dp">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:textColor="#BB2D3E"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:text="الطلب 4 "
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:text=" القاهره,حي العاشر من رمضان.. "
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/location4"
                        android:layout_width="134dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:textColor="#EC9FA8"
                        android:layout_height="33dp"
                        android:text="مزيد من التغاصيل" />



                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_gravity="start"
        app:menu="@menu/driver_menu"
        app:headerLayout="@layout/nav_header_driver"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.drawerlayout.widget.DrawerLayout>