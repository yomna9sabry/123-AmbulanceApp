<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome_pageActivity">

<ImageView
    android:layout_width="match_parent"
    android:src="@drawable/image5"
    android:scaleType="centerCrop"
    android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginBottom="16dp"
        android:background="#7CFFFFFF"
        android:gravity="center"
        android:text="اسرع عربية اسعاف"
        android:textColor="#BB2D3E"
        android:textSize="30dp"
        android:textStyle="bold"
        android:transformPivotX="2dp"
        android:transformPivotY="5dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_register"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="132dp"
        android:layout_height="122dp"
        android:layout_marginBottom="280dp"
        android:background="@drawable/btn_register"
        android:text="تسجيل الدخول"
        android:textColor="#fff"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#BB2D3E"
        android:text="تسجيل حاله طارئه الان"

        android:textColor="#ffff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_register"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/btn_call"
        android:layout_width="0dp"
        android:layout_height="70dp"

        android:background="#BB2D3E"
        android:drawableLeft="@drawable/ic_call_black_24dp"
        android:padding="20dp"
        android:text="الخط الساخن للاسعاف"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_register"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/driver"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_map_marker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />
</androidx.constraintlayout.widget.ConstraintLayout>